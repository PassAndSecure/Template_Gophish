<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Nom du fichier de sortie"
    Width="400" Height="200" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Entrez le nom du fichier (sans extension):" Margin="0,0,0,10"/>
        <TextBox x:Name="FileNameTextBox" Grid.Row="1" Text="group_template_" Width="360"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="OkButton" Content="OK" Width="100" Margin="5"/>
            <Button x:Name="CancelButton" Content="Annuler" Width="100" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>

